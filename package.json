{
  "name": "cozy-nest",
  "version": "1.0.0",
  "description": "Beautiful landing page for a fictional housing company",
  "main": "index.html",
  "scripts": {
    "watch:scss": "sass ./sass/main.scss ./css/styles.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel watch:scss devserver",
    "compile:scss": "sass ./sass/main.scss ./css/styles.compile.css",
    "prefix:scss": "postcss --use autoprefixer -b 'last 10 versions' ./css/styles.compile.css -o ./css/styles.prefix.css",
    "compress:scss": "sass ./css/styles.prefix.css ./css/styles.min.css --style=compressed",
    "build:scss": "npm-run-all compile:scss prefix:scss compress:scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aman50/cozy-nest.git"
  },
  "keywords": [
    "html",
    "css",
    "grid",
    "modern",
    "responsive",
    "optimized"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.11",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.0.0",
    "sass": "^1.54.9"
  },
  "author": "Aman Bhalla",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Aman50/cozy-nest/issues"
  },
  "homepage": "https://github.com/Aman50/cozy-nest#readme"
}
